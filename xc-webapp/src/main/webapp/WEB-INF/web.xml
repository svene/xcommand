<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<filter>
		<filter-name>xc-webcv-initializationFilter</filter-name>
		<filter-class>org.xcommand.web.WebCVInitializationFilter</filter-class>
	</filter>
	<filter>
		<filter-name>xc-enter-filter</filter-name>
		<filter-class>org.xcwebapp.web.CommandDispatchFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>xc-webcv-initializationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>xc-enter-filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>org.xcwebapp.web.XCServletContextListener</listener-class>
	</listener>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>